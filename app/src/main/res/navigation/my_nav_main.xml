<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.usedbooks.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_materialeFragment"
            app:destination="@id/materialeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToSaveState="true" >
            <argument
                android:name="materiale"
                app:argType="com.example.usedbooks.dataClass.Materiale"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.usedbooks.main.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.usedbooks.main.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.usedbooks.main.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/materialeFragment"
        android:name="com.example.usedbooks.main.home.MaterialeFragment"
        android:label="MaterialeFragment" >
        <argument
            android:name="materiale"
            app:argType="com.example.usedbooks.dataClass.Materiale"
            />
    </fragment>
</navigation>