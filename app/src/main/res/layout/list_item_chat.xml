<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_listview">
    <ImageView
        android:id="@+id/iv_foto_profilo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/test"
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_weight="1">
            <TextView
                android:id="@+id/tv_nome_studente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_of_student"
                android:textColor="?attr/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_ultimo_messaggio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_messagge"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_data_messaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="15dp"
        android:text="@string/date_last_messagge"
        android:layout_weight="15"/>
</LinearLayout>