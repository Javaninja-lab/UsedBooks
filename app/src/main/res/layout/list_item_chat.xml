<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_item_listview"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/iv_foto_profilo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_image_profile"
        app:srcCompat="@drawable/placeholder" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nome_studente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_of_student"
                android:textColor="?attr/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_ultimo_messaggio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_messagge"/>
    </LinearLayout>
</LinearLayout>