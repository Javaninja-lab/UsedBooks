<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.profile.SoldFragment">

    <TextView
        android:id="@+id/tv_title_sold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/choose_the_student_that_acquire_the_material"
        android:textAlignment="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/primaryStyleTextView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_sold"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_sold"

        tools:listitem="@layout/list_item_chat"/>
</androidx.constraintlayout.widget.ConstraintLayout>