<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearanceOverlay">@style/shapeButton</item>
    </style>
    <style name="shapeButton">
        <item name="cornerSize">100%</item>
    </style>
    <style name="primaryStyleButton" parent="styleButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="secondStyleButton" parent="styleButton">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorSecondaryVariant</item>
    </style>
    <style name="primaryStyleTextView" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearanceOverlay">@style/shapeButton</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="background">?attr/colorPrimary</item>
    </style>
</resources>